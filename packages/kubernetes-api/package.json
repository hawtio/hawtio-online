{
  "name": "@hawtio/kubernetes-api-root",
  "private": true,
  "version": "0.0.0",
  "author": "Hawtio developer team",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/api/api-next.git"
  },
  "workspaces": [
    "api",
    "app"
  ],
  "scripts": {
    "start": "concurrently -n api,app \"yarn build:api:watch\" \"yarn start:app\"",
    "start:app": "yarn workspace app start",
    "build": "yarn build:api",
    "build:all": "yarn workspaces foreach -v -i -pt --exclude @hawtio/kubernetes-api-root run build",
    "build:app": "yarn workspace @hawtio/kubernetes-api-app build",
    "build:api": "yarn workspace @hawtio/kubernetes-api build",
    "build:api:watch": "yarn workspace @hawtio/online-kubernetes-api build:watch",
    "test": "yarn test:api",
    "test:all": "yarn workspaces foreach -v -i -pt --exclude @hawtio/kubernetes-api-root run test",
    "test:api": "yarn workspace @hawtio/online-kubernetes-api test",
    "test:api:watch": "yarn workspace @hawtio/online-kubernetes-api test:watch",
    "lint": "yarn eslint api/src/ app/src/",
    "lint:fix": "yarn lint --fix",
    "format:check": "yarn prettier --check .",
    "format:fix": "yarn prettier --write .",
    "release:api": "yarn workspace @hawtio/online-kubernetes-api npm publish --tolerate-republish"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "concurrently": "^8.2.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "3.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "packageManager": "yarn@3.6.0",
  "engines": {
    "yarn": ">=3.6.0"
  }
}
