{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Values",
  "description": "Schema for Hawtio Online Helm Chart",
  "type": "object",
  "properties": {
    "mode": {
      "description": "The mode of installation",
      "type": "string",
      "enum": [
        "cluster",
        "namespace"
      ],
      "default": "namespace"
    },
    "clusterType": {
      "description": "The type of the target cluster",
      "type": "string",
      "enum": [
        "openshift",
        "k8s"
      ],
      "default": "openshift"
    },
    "hawtconfig": {
      "description": "Use hawtconfig config map",
      "type": "boolean",
      "default": true
    },
    "internalSSL": {
      "description": "Use internal SSL. Only required if clusterType is k8s",
      "type": "boolean",
      "default": true
    },
    "maskIPAddresses": {
      "description": "Mask IP addresses in application responses",
      "type": "boolean",
      "default": false
    },
    "consoleUrl": {
      "description": "The url of the OpenShift Console (only applicable to clusterType: openshift)",
      "type": [
        "string",
        "null"
      ]
    },
    "nodeSelector": {
      "description": "Node selector for pod assignment",
      "type": "object"
    },
    "imagePullSecrets": {
      "description": "Image pull secrets",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        }
      }
    },
    "online": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "shortname": { "type": "string" },
        "rbac": {
          "type": "object",
          "properties": {
            "name": { "type": "string" }
          }
        },
        "application": { "type": "string" },
        "replicaCount": { "type": "integer" },
        "logLevel": {
          "description": "Set whether the logging level of the online server",
          "type": "string",
          "enum": [
            "emerg",
            "alert",
            "crit",
            "error",
            "warn",
            "notice",
            "info"
          ],
          "default": "info"
        },
        "image": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "tag": { "type": "string" },
            "pullPolicy": {
              "type": "string",
              "enum": ["Always", "IfNotPresent", "Never"]
            }
          }
        },
        "deployment": {
          "type": "object",
          "properties": {
            "plain": {
              "type": "object",
              "properties": {
                "scheme": { "type": "string", "enum": ["HTTP"] },
                "port": { "type": "integer" }
              }
            },
            "ssl": {
              "type": "object",
              "properties": {
                "scheme": { "type": "string", "enum": ["HTTPS"] },
                "port": { "type": "integer" }
              }
            },
            "port": { "type": "integer" }
          }
        },
        "service": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["ClusterIP", "NodePort", "LoadBalancer"]
            },
            "annotations": {
              "type": [
                "string",
                "null"
              ]
            },
            "plain": {
              "type": "object",
              "properties": {
                "port": { "type": "integer" }
              }
            },
            "ssl": {
              "type": "object",
              "properties": {
                "port": { "type": "integer" }
              }
            }
          }
        },
        "ingress": {
          "type": "object",
          "properties": {
            "className": { "type": "string" },
            "host": { "type": "string" },
            "annotations": {
              "type": [
                "string",
                "null"
              ]
            }
          }
        },
        "resources": {
          "type": "object",
          "properties": {
            "requests": {
              "type": "object",
              "properties": {
                "cpu": { "type": ["string", "number"] },
                "memory": { "type": "string" }
              }
            },
            "limits": {
              "type": "object",
              "properties": {
                "cpu": { "type": ["string", "number"] },
                "memory": { "type": "string" }
              }
            }
          }
        },
        "secrets": {
          "type": "object",
          "properties": {
            "serving": {
              "type": "object",
              "properties": { "name": { "type": "string" } }
            },
            "proxy": {
              "type": "object",
              "properties": { "name": { "type": "string" } }
            }
          }
        },
        "authClientId": { "type": "string" }
      }
    },
    "gateway": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "image": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "tag": { "type": "string" },
            "pullPolicy": {
              "type": "string",
              "enum": ["Always", "IfNotPresent", "Never"]
            }
          }
        },
        "deployment": {
          "type": "object",
          "properties": {
            "port": { "type": "integer" }
          }
        },
        "logLevel": {
          "description": "Set whether the logging level of the online server",
          "type": "string",
          "enum": [
            "info",
            "debug",
            "trace"
          ],
          "default": "info"
        }
      }
    }
  }
}
